<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/smallLogo"
        android:layout_width="92dp"
        android:layout_height="78dp"
        android:layout_gravity="center_vertical|center"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/logo_small" />

    <TextView
        android:id="@+id/Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="Settings"
        android:textColor="@android:color/black"
        android:textStyle="bold|italic"
        tools:textSize="36sp" />

    <TextView
        android:id="@+id/emailCheckingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:text="How would you like to check for events?"
        tools:elevation="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/button_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:allowUndo="true"
            android:onClick="showEmailButtonHandler"
            android:text="Email"
            tools:checked="false"
            tools:clickable="true" />

        <RadioButton
            android:id="@+id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:allowUndo="true"
            android:onClick="showTextButtonHandler"
            android:text="Text"
            tools:clickable="true" />

        <RadioButton
            android:id="@+id/button_both"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:allowUndo="true"
            android:checked="false"
            android:onClick="showBothButtonHandler"
            android:text="Both"
            tools:clickable="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="How often would you like to check for events?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/button_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:allowUndo="true"
            android:onClick="showMinButtonHandler"
            android:text="Every 30 Min"
            tools:clickable="true" />

        <RadioButton
            android:id="@+id/button_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:allowUndo="true"
            android:onClick="showDayButtonHandler"
            android:text="Once a day"
            tools:clickable="true" />

        <RadioButton
            android:id="@+id/button_demand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:allowUndo="true"
            android:checked="false"
            android:onClick="showDemandButtonHandler"
            android:text="On demand"
            tools:clickable="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="Except all events from:" />

    <ScrollView
        android:id="@+id/ScrollView_White"
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <LinearLayout
            android:id="@+id/ScrollView_White_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="None"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/field_white"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:hint="Add another account"
        android:inputType="text|textEmailAddress"
        android:maxLines="1"
        tools:textSize="10sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="Except no events from:" />

    <ScrollView
        android:id="@+id/ScrollView_Black"
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <LinearLayout
            android:id="@+id/ScrollView_Black_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="None"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/field_black"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:hint="Add another account"
        android:inputType="text|textEmailAddress"
        android:maxLines="1"
        tools:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update" />

        <Button
            android:id="@+id/button_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exit" />
    </LinearLayout>

    <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:hint="Add another account"
        android:inputType="text|textEmailAddress"
        android:maxLines="1"
        tools:textSize="10sp" />

</LinearLayout>